@model IEnumerable<PowerTracker.Models.Diet>
@{
    ViewData["Title"] = "Diet Index";
}

<h2>All Diets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Food</th>
            <th>Category</th>
            <th>Quantity (grams)</th>
            <th>Calories</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var diet in Model)
        {
            <tr>
                <td>@diet.Food.Name</td> <!-- Използваме Food.Name -->
                <td>@diet.Category.NameOfCategorie</td> <!-- Използваме Category.NameOfCategorie -->
                <td>@diet.QuantityInGrams</td>
                <td>@diet.Calories</td>
                <td>@diet.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", "Diets", new { id = diet.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Diets", new { id = diet.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Diets")" class="btn btn-primary">Create New Diet</a>
