@model IEnumerable<PowerTracker.Models.Diet>

<h2 class="mt-3">Моите хранения</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Добави хранене</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Категория</th>
            <th>Храна</th>
            <th>Количество (гр.)</th>
            <th>Калории</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Food.Category.Name</td> <!-- Поправено -->
                <td>@item.Food.Name</td>
                <td>@item.QuantityInGrams</td>
                <td>@item.Calories</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
