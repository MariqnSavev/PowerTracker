@model IEnumerable<PowerTracker.Models.Diet>

@{
    ViewData["Title"] = "Списък с диети";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Добави нова диета</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Категория</th>
            <th>Храна</th>
            <th>Количество (г)</th>
            <th>Калории</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category.Name</td>
                <td>@item.Food.Name</td>
                <td>@item.QuantityInGrams</td>
                <td>@item.Calories</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Редактирай</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
