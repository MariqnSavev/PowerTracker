@model PowerTracker.Models.Diet

@{
    ViewData["Title"] = "Edit Diet";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="FoodId" class="control-label">Food</label>
        <select asp-for="FoodId" class="form-control" asp-items="@(new SelectList(ViewBag.FoodList, "Id", "Name"))"></select>
        <span asp-validation-for="FoodId" class="text-danger"></span>
    </div>

 

    <div class="form-group">
        <label asp-for="CaloriesPer100g" class="control-label">Calories Per 100g</label>
        <input asp-for="CaloriesPer100g" class="form-control" />
        <span asp-validation-for="CaloriesPer100g" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantityInGrams" class="control-label">Quantity (g)</label>
        <input asp-for="QuantityInGrams" class="form-control" />
        <span asp-validation-for="QuantityInGrams" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}