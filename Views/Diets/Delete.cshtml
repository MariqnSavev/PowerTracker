@model PowerTracker.Models.Diet

@{
    ViewData["Title"] = "Изтриване на диета";
}

<h2>@ViewData["Title"]</h2>

<h3>Сигурни ли сте, че искате да изтриете този запис?</h3>
<div>
    <h4>Диета</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Model.Food?.Category?.Name
        </dd>
        <dt class="col-sm-2">
            Храна
        </dt>
        <dd class="col-sm-10">
            @Model.Food?.Name
        </dd>
        <dt class="col-sm-2">
            Количество (г)
        </dt>
        <dd class="col-sm-10">
            @Model.QuantityInGrams
        </dd>
        <dt class="col-sm-2">
            Калории
        </dt>
        <dd class="col-sm-10">
            @Model.Calories.ToString("N0")
        </dd>
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отказ</a>
    </form>
</div>