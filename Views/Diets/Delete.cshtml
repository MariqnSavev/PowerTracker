@model PowerTracker.Models.Diet


@{
    ViewData["Title"] = "Delete Diet";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Are you sure you want to delete this diet?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Food</dt>
        <dd>@Model.Food.Name</dd>

        <dt>Category</dt>
        <dd>@Model.Category.NameOfCategorie</dd>

        <dt>Quantity (grams)</dt>
        <dd>@Model.QuantityInGrams</dd>

        <dt>Calories</dt>
        <dd>@Model.Calories</dd>

        <dt>Date</dt>
        <dd>@Model.Date.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Diets")" class="btn btn-secondary">Cancel</a>
    </form>
</div>