@model PowerTracker.Models.Diet
@{
    ViewBag.Title = "Create Diet";
}

<h2>Create Diet</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.FoodId)
        @Html.DropDownListFor(model => model.FoodId, new SelectList(ViewBag.FoodList, "Id", "Name"), "Select Food")
        @Html.ValidationMessageFor(model => model.FoodId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.QuantityInGrams)
        @Html.TextBoxFor(model => model.QuantityInGrams)
        @Html.ValidationMessageFor(model => model.QuantityInGrams)
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}
