@model PowerTracker.Models.Diet

<h2>Добавяне на нова храна</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Име на храната</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CaloriesPer100g" class="control-label">Калории на 100 грама</label>
        <input asp-for="CaloriesPer100g" class="form-control" />
        <span asp-validation-for="CaloriesPer100g" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantityInGrams" class="control-label">Количество (г)</label>
        <input asp-for="QuantityInGrams" class="form-control" />
        <span asp-validation-for="QuantityInGrams" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>
</form>
