@model PowerTracker.Models.Goal

@{
    ViewData["Title"] = "Изтриване на цел";
}

<h2>Сигурни ли сте, че искате да изтриете тази цел?</h2>

<table class="table">
    <tr><th>Име:</th><td>@Model.Name</td></tr>
    <tr><th>Начално тегло:</th><td>@Model.StartWeight кг</td></tr>
    <tr><th>Целево тегло:</th><td>@Model.TargetWeight кг</td></tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
