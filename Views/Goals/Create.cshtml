@model Goal

<h2>Добавяне на цел</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Име</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Начални кг</label>
        <input asp-for="StartWeight" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Целеви кг</label>
        <input asp-for="TargetWeight" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Начална дата</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Крайна дата</label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Запази</button>
</form>
}
