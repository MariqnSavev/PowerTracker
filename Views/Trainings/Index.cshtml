@model IEnumerable<Training>

<h2 class="mt-3">Моите тренировки</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Добави тренировка</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Описание</th>
            <th>Вид тренировка</th>
            <th>Продължителност (мин)</th>
            <th>Калории</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Activity</td>
                <td>@item.DurationMinutes</td>
                <td>@item.CaloriesBurned</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <tfoot>
        <tr>
            <td colspan="4" class="text-end"><strong>Total Calories:</strong></td>
            <td>
                <strong>@Model.Sum(item => item.CaloriesBurned)</strong>
            </td>
            <td></td>
        </tr>
    </tfoot>
</table>
