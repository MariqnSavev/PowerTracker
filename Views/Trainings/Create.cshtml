@model Training

<h2>Добавяне на тренировка</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Описание</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Вид тренировка</label>
        <select asp-for="Activity" class="form-control">
            <option value="Running">Бягане</option>
            <option value="Cycling">Колоездене</option>
            <option value="Walking">Ходене</option>
            <option value="Weightlifting">Вдигане на тежести</option>
        </select>
    </div>
    <div class="form-group">
        <label>Продължителност (мин)</label>
        <input asp-for="DurationMinutes" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Тегло (кг)</label>
        <input asp-for="WeightInKg" type="number" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Запази</button>
</form>
