@model IEnumerable<PowerTracker.Models.Foods>

@{
    ViewData["Title"] = "Списък с храни";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary">Добави нова храна</a>

<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Калории (100г)</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CaloriesPer100g</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактирай</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Детайли</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
