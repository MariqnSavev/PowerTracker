@model PowerTracker.Models.Food

@{
    ViewData["Title"] = "Изтрий храна";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <h3>Сигурни ли сте, че искате да изтриете тази храна?</h3>

    <div class="card mt-3">
        <div class="card-body">
            <h4>@Model.Name</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Калории</dt>
                <dd class="col-sm-9">@Model.Calories</dd>

                <dt class="col-sm-3">Протеин</dt>
                <dd class="col-sm-9">@Model.Protein g</dd>

                <dt class="col-sm-3">Мазнини</dt>
                <dd class="col-sm-9">@Model.Fat g</dd>

                <dt class="col-sm-3">Въглехидрати</dt>
                <dd class="col-sm-9">@Model.Carbs g</dd>

                <dt class="col-sm-3">Размер порция</dt>
                <dd class="col-sm-9">@Model.ServingSize g</dd>

                @if (!string.IsNullOrEmpty(Model.Brand))
                {
                    <dt class="col-sm-3">Марка</dt>
                    <dd class="col-sm-9">@Model.Brand</dd>
                }
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Изтрий</button>
                <a asp-action="Index" class="btn btn-secondary">Отказ</a>
            </form>
        </div>
    </div>
</div>