@model PowerTracker.Models.Food

@{
    ViewData["Title"] = "Редактирай храна";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name">Име</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Calories">Калории</label>
                            <input asp-for="Calories" class="form-control" />
                            <span asp-validation-for="Calories" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Protein">Протеин (g)</label>
                            <input asp-for="Protein" class="form-control" />
                            <span asp-validation-for="Protein" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Fat">Мазнини (g)</label>
                            <input asp-for="Fat" class="form-control" />
                            <span asp-validation-for="Fat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Carbs">Въглехидрати (g)</label>
                            <input asp-for="Carbs" class="form-control" />
                            <span asp-validation-for="Carbs" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ServingSize">Размер на порция (g)</label>
                            <input asp-for="ServingSize" class="form-control" />
                            <span asp-validation-for="ServingSize" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Brand">Марка</label>
                            <input asp-for="Brand" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Barcode">Баркод</label>
                    <input asp-for="Barcode" class="form-control" />
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Запази промените</button>
                    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}